<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_gragh"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.udemylearn.noteappproject.fragments.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_noteHomeFragment"
            app:destination="@id/noteHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.udemylearn.noteappproject.fragments.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/newNoteFragment"
        android:name="com.udemylearn.noteappproject.fragments.NewNoteFragment"
        android:label="fragment_new_note"
        tools:layout="@layout/fragment_new_note" >
        <action
            android:id="@+id/action_newNoteFragment_to_noteHomeFragment"
            app:destination="@id/noteHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateNoteFragment"
        android:name="com.udemylearn.noteappproject.fragments.UpdateNoteFragment"
        android:label="fragment_update_note"
        tools:layout="@layout/fragment_note_update" >
        <action
            android:id="@+id/action_updateNoteFragment_to_noteHomeFragment"
            app:destination="@id/noteHomeFragment" />
        <argument
            android:name="note"
            app:argType="com.udemylearn.noteappproject.model.Note"
            app:nullable="true" />

    </fragment>
    <fragment
        android:id="@+id/noteHomeFragment"
        android:name="com.udemylearn.noteappproject.fragments.NoteHomeFragment"
        android:label="fragment_note_home"
        tools:layout="@layout/fragment_note_home" >
        <action
            android:id="@+id/action_noteHomeFragment_to_newNoteFragment"
            app:destination="@id/newNoteFragment" />
        <action
            android:id="@+id/action_noteHomeFragment_to_updateNoteFragment"
            app:destination="@id/updateNoteFragment" />
    </fragment>
</navigation>